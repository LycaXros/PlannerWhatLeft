<dx:ThemedWindow xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
        xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
        xmlns:local="clr-namespace:WhatLeftPlanning"
        xmlns:view ="clr-namespace:WhatLeftPlanning.Views"
        xmlns:viewModel ="clr-namespace:WhatLeftPlanning.ViewModels"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" x:Name="themedWindow"  x:Class="WhatLeftPlanning.MainWindow"
        mc:Ignorable="d"  Icon="SchedulerIcon.ico" 
        Title="Whats Left?" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <dx:ThemedWindow.Resources>
        <DataTemplate DataType="{x:Type viewModel:ListaTareasViewModel}">
            <view:ListaTareas/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AddEditTareaViewModel}">
            <view:AddEditTareaView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ManejoUsuariosViewModel}">
            <view:ManejoUsuariosView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:NuevoGrupoViewModel}">
            <view:NuevoGrupoView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ListaDetallesGrupoViewModel}">
            <view:ListaDetallesGrupoView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AsignarGrupoViewModel}">
            <view:AsignarGrupoView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AsignarTareasViewModel}">
            <view:AsignarTareasView/>
        </DataTemplate>
    </dx:ThemedWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <dxr:RibbonControl RibbonStyle="Office2010"  x:Name="MainMenuRibbon" ShowApplicationButton="False" ToolbarShowMode="ShowAbove" PageCategoryAlignment="Left">
            <dxr:RibbonDefaultPageCategory Caption="Default Category">
                <dxr:RibbonPage Caption="Menu">
                    <dxr:RibbonPageGroup Caption="Tareas">
                        <dxb:BarButtonItemLink 
                            />
                        <dxb:BarButtonItem Content="Ver Tareas" Glyph="{dx:DXImage Image=ConvertToRange_32x32.png}" RibbonStyle="Large"
                                           Hint="Abre la lista de tareas del usuario asignado." 
                                           Command="{Binding NavCommand}"
                                           CommandParameter="listaTareas"/>
                        <dxb:BarButtonItem Content="Nueva Tarea" LargeGlyph="{dx:DXImage Image=AddFile_32x32.png}" Glyph="{dx:DXImage Image=AddFile_16x16.png}" RibbonStyle="Large"
                                           Command="{Binding NavCommand}"
                                           CommandParameter="nuevaTarea"/>
                    </dxr:RibbonPageGroup>
                    <dxr:RibbonPageGroup Caption="Administracion de Usuario">
                        <dxb:BarButtonItem Glyph="{dx:DXImage Image=BOCustomer_32x32.png}" LargeGlyph="{dx:DXImage Image=BOCustomer_32x32.png}" RibbonStyle="Large"
                                           Command="{Binding NavCommand}"
                                           CommandParameter="manejoUsuario" Content="Manejo de Usuario"/>
                        <dxb:BarButtonItem Content="Asignar a Grupos" LargeGlyph="{dx:DXImage Image=UserGroup_32x32.png}" Glyph="{dx:DXImage Image=UserGroup_16x16.png}"
                                           Command="{Binding NavCommand}"
                                           CommandParameter="asignarGrupos"/>
                        <dxb:BarButtonItem Content="Asignar Tareas" LargeGlyph="{dx:DXImage Image=BOTask_32x32.png}" Glyph="{dx:DXImage Image=BOTask_16x16.png}"
                                           Command="{Binding NavCommand}"
                                           CommandParameter="setTareas"/>
                    </dxr:RibbonPageGroup>
                    <dxr:RibbonPageGroup Caption="Grupos" SmallGlyph="{dx:DXImage Image=BOFolder_16x16.png}">
                        <dxb:BarButtonItem Content="Administrar Grupos" LargeGlyph="{dx:DXImage Image=BODepartment_32x32.png}" Glyph="{dx:DXImage Image=BODepartment_16x16.png}"
                                           Command="{Binding NavCommand}"
                                           CommandParameter="adminGroup"/>
                        <dxb:BarButtonItem Content="Nuevo Grupo" LargeGlyph="{dx:DXImage Image=Add_32x32.png}" Glyph="{dx:DXImage Image=Add_16x16.png}"
                                           Command="{Binding NavCommand}"
                                           CommandParameter="newGroup"/>
                    </dxr:RibbonPageGroup>
                    <dxr:RibbonPageGroup Caption="Reportes">
                        <dxb:BarButtonItem Content="Ver Reportes" LargeGlyph="{dx:DXImage Image=Report_32x32.png}" Glyph="{dx:DXImage Image=Report_16x16.png}"
                                           Command="{Binding ShowReportCommand}"
                                           CommandParameter="verReportes"/>
                    </dxr:RibbonPageGroup>
                </dxr:RibbonPage>
            </dxr:RibbonDefaultPageCategory>
        </dxr:RibbonControl>
        <dxr:RibbonStatusBarControl Grid.Row="2" >
            <dxr:RibbonStatusBarControl.RightItems>
                <dxb:BarStaticItem ItemMinWidth="150" AutoSizeMode="Fill" Content="{Binding UserInfo}"/>
            </dxr:RibbonStatusBarControl.RightItems>
        </dxr:RibbonStatusBarControl>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Height="500">
                <ContentControl Content="{Binding CurrentViewModel}" />
            </Grid>
        </ScrollViewer>
    </Grid>
</dx:ThemedWindow>
